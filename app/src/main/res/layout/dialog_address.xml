<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:padding="20dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dlg_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the location related to your note"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/dlg_etAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter the Address:"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/dlg_etCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter the city:"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/dlg_etProvince"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter the Province or State"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/dlg_etCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter the Country"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/dlg_etPostalCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter the Postal Code"
        android:inputType="textPostalAddress" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dlg_btnCancel"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel" />

        <Button
            android:id="@+id/dlg_btnEnter"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK" />

    </LinearLayout>

</LinearLayout>